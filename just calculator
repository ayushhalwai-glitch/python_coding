print("ICONIC CALCULATOR")
print(" 1. ADDITION ")
print(" 2. SUBTRACTION ")
print(" 3. MULTIPICATION ")
print(" 4. DIVISION ")

select = int(input("SELECT THE ABOVE NUMBER : "))
if select == 1:
    a = float(input("ENTER THE FIRST NUMBER : "))
    m = float(input("ENTER THE SECOND NUMBER : "))
    sum = a+m
    print("THE TRUTH VALUE : ",sum)
elif select == 2:
    a = float(input("ENTER THE FIRST NUMBER : "))
    m = float(input("ENTER THE SECOND NUMBER : "))
    no = a-m
    print("THE REAL VALUE : ",no)
elif select == 3:
    a = float(input("ENTER THE FIRST NUMBER : "))
    m = float(input("ENTER THE SECOND NUMBER : "))
    no_1 = a*m
    print("THE OUTPUT VALUE : ",no_1)
elif select == 4:
    a = float(input("ENTER THE FIRST NUMBER : "))
    m = float(input("ENTER THE SECOND NUMBER : "))
    no_2 = a/m
    print("THE OUTCOME : ",no_2)

else:
    print("invalid choice")
